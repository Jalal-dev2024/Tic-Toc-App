<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

       <TextView
           android:id="@+id/tvPlayerName1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Player1"
           android:textAlignment="center"
           android:layout_marginTop="60dp"
           android:textColor="@android:color/holo_orange_dark"
           android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivPlayingImageOne"
        android:paddingTop="8dp"
        android:layout_width="137dp"
        android:layout_height="127dp"
        android:src="@drawable/o_image"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/ivPlayingImageTwo"
        android:paddingTop="8dp"
        android:layout_width="137dp"
        android:layout_height="127dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/ivPlayingImageThree"
        android:paddingTop="8dp"
        android:layout_width="137dp"
        android:layout_height="127dp"
        android:src="@drawable/ic_launcher_background" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivPlayingImageFour"
            android:paddingTop="8dp"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/PlayingImageFive"
            android:paddingTop="8dp"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/x_image"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/PlayingImageSix"
            android:paddingTop="8dp"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivPlayingImageSeven"
            android:paddingTop="8dp"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/ivPlayingImageEight"
            android:paddingTop="8dp"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/ivPlayingImageNine"
            android:paddingTop="8dp"
            android:layout_width="137dp"
            android:layout_height="127dp"
            android:src="@drawable/x_image" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvPlayerName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player2"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/holo_orange_dark"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>

</LinearLayout>