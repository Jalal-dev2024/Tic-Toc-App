<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp">

       <TextView
           android:id="@+id/tvPlayerName1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Player1"
           android:layout_marginBottom="5dp"
           android:textAlignment="center"
           android:layout_marginTop="16dp"
           android:textColor="@android:color/holo_orange_dark"
           android:textSize="18sp"
           android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSideOne"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <ImageView
        android:id="@+id/ivPlayingImageOne"
        android:paddingTop="8dp"
        android:layout_width="132dp"
        android:layout_height="127dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:focusable="false" />
        
        <View
            style="@style/verticalLine"
            android:background="@color/black"/>

    <ImageView
        android:id="@+id/ivPlayingImageTwo"
        android:paddingTop="8dp"
        android:layout_width="132dp"
        android:layout_height="127dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="8dp"/>

        <View
            style="@style/verticalLine"
            android:background="@color/black"/>

    <ImageView
        android:id="@+id/ivPlayingImageThree"
        android:paddingTop="8dp"
        android:layout_width="132dp"
        android:layout_height="127dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_launcher_background" />
    </LinearLayout>


    <View
        style="@style/horizontalLine"
        android:background="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivPlayingImageFour"
            android:paddingTop="8dp"
            android:layout_width="132dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <View
            style="@style/verticalLine"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/ivPlayingImageFive"
            android:paddingTop="8dp"
            android:layout_width="132dp"
            android:layout_height="127dp"
            android:src="@drawable/x_image"
            android:layout_marginBottom="8dp"/>

        <View
            style="@style/verticalLine"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/ivPlayingImageSix"
            android:paddingTop="8dp"
            android:layout_width="132dp"
            android:layout_height="127dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>


    <View
        style="@style/horizontalLine"
        android:background="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivPlayingImageSeven"
            android:paddingTop="8dp"
            android:layout_width="132dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <View
            style="@style/verticalLine"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/ivPlayingImageEight"
            android:paddingTop="8dp"
            android:layout_width="132dp"
            android:layout_height="127dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <View
            style="@style/verticalLine"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/ivPlayingImageNine"
            android:paddingTop="8dp"
            android:layout_width="132dp"
            android:layout_height="127dp"
            android:src="@drawable/x_image"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSideTwo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvPlayerName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player2"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/buttonStartNewGame"
            android:layout_width="151dp"
            android:layout_height="58dp"
            android:background="@drawable/round_styles"
            android:backgroundTint="#D322AD"
            android:fontFamily="sans-serif-medium"
            android:text="Start New Game"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>